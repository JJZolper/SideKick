            android:name="edu.vt.ece4564.sidekick.LoginView"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity><meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/app_id" />
        <activity
            android:name="edu.vt.ece4564.sidekick.CameraView"
            android:label="@string/title_activity_camera_view" >
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="edu.vt.ece4564.sidekick.ReviewsView"
            android:label="@string/title_activity_reviews" >
        </activity>
        <activity
            android:name="edu.vt.ece4564.sidekick.PlaceView"
            android:label="@string/title_activity_place" >
        </activity>
        <activity
            android:name="edu.vt.ece4564.sidekick.AddReview"
            android:label="@string/title_activity_add_review" >
        </activity>
        <activity
            android:name="edu.vt.ece4564.sidekick.AddEvent"
            android:label="@string/title_activity_add_event" >
        </activity>
        <activity android:name="com.facebook.LoginActivity"></activity>
        
    </application>

</manifest>
